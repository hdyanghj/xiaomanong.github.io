/**index.wxss**/

page, .container{
  background: #000;
}

.loading_box{
		width: 60px;
		height: 15px;
		margin: 0 auto;
		margin-top:80px;
    text-align: center
	}
  .loading {
    width: 20rpx;
    height: 20rpx;
		display: inline-block;
		margin-right: 5px;
		border-radius: 50%;
		background: #FFFFFF;
	}


.loading_1 {
  -webkit-animation: loading 1s linear infinite alternate;
  animation: loading 1s linear infinite alternate;
}

.loading_2 {
  -webkit-animation: loading 1s linear infinite alternate;
  animation: loading 1s linear infinite alternate;
  animation-delay: 0.5s;
}

.loading_3 {
  -webkit-animation: loading 1s linear infinite alternate;
  animation: loading 1s linear infinite alternate;
  animation-delay: 1s;
}

@-webkit-keyframes loading {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

@keyframes loading {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}